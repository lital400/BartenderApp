@model IEnumerable<BartenderApp.Models.Cocktail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row pb-3 backgroundWhite">
        @foreach (var cocktail in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border:1px solid; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@cocktail.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5"><b>@cocktail.Name</b></p>
                                <p class="card-title">@cocktail.Description</p>
                            </div>
                            <div style="padding-left:5px;">
                                <p class="text-white">Price: <b class="">$@cocktail.Price.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                           
                            <a asp-action="Insert" class="btn btn-primary form-control" asp-route-id="@cocktail.Id">Order Cocktail</a>
                           
                            <a asp-action="Edit" asp-route-id="@cocktail.Id">Edit</a>
                            <a asp-action="Details" asp-route-id="@cocktail.Id">Details</a>
                            <a asp-action="Delete" asp-route-id="@cocktail.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            
}
</div>

                

