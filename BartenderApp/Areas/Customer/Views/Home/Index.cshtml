@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="text-center">
    <h1 class="display-4">My Bar</h1>
</div>
<div class="container">
    <div class="row p-2">
        <div class="col-12 col-sm-12 col-md-6 col-lg-3">
            <a class="btn btn-primary btn-lg btn-block" asp-area="Admin" asp-controller="Cocktail" asp-action="Index"> &nbsp; View Cocktail Menu</a>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-12 col-sm-12 col-md-6 col-lg-3">
            <a class="btn btn-primary btn-lg btn-block" asp-area="Admin" asp-controller="Order" asp-action="Index"> &nbsp; Order Queue</a>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-12 col-sm-12 col-md-6 col-lg-3">
            <a class="btn btn-primary btn-lg btn-block" asp-area="Admin" asp-controller="Cocktail" asp-action="Upsert"> &nbsp; Add Cocktail</a>
        </div>
    </div>
</div>



@section head{
    <style type="text/css">
        body {
            background: linear-gradient( rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7) ), url('/Images/backgrounds/cocktails.jpg');
            background-size: cover;
            background-position: center;
        }
    </style>
}
